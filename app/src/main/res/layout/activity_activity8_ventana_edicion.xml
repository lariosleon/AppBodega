<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_standar"
    tools:context=".Activity8_VentanaEdicion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounder_backgound"
            android:layout_margin="30dp"
            android:padding="20dp"
            android:elevation="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_nombreProyectoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Proyecto 1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <android.widget.Button
                    android:id="@+id/btn_borrarProyecto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@color/white"
                    android:foreground="@drawable/baseline_close"
                    android:foregroundTint="@color/red"/>
            </LinearLayout>



            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Datos del proyecto registrado:"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
                android:layout_marginTop="15dp"
            android:text="Número de celular:" />

        <TextView
            android:id="@+id/txt_numCelEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:text="+51 949123789" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Mensaje principal:" />

        <TextView
            android:id="@+id/txt_mensajeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:text="Hola Mundo ..." />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Mi Descripción (editable):"
            android:layout_marginLeft="10dp"/>


        <EditText
            android:id="@+id/txt_descripcionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Presionar aqui"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>

        <ImageView
            android:id="@+id/img_qrEdit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/verdeStandaOpaco"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@drawable/logomarca"
            />

        <TextView
            android:id="@+id/txt_linkEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="WWW.MiNegocio.com/dasdas/fasf/saf"
            />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Mi Archivo proyecto:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txt_pathLinkEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:text="CatalogoAbarrotesBasicas.pdf"/>



            <android.widget.Button
                android:id="@+id/btn_guardarEdicionA8"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_standar"
                android:text="Guardar"
                android:drawableLeft="@drawable/guardar"
                android:drawableTint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <android.widget.Button
                android:id="@+id/btn_cancelarEdicionA8"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/button_standar"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="Salir"

                />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>